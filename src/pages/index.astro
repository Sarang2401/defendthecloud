---
import BaseLayout from "../layouts/BaseLayout.astro";
import HomeFeatured from "../components/HomeFeatured.astro";
import HomePostCard from "../components/HomePostCard.astro";
import Sidebar from "../components/Sidebar.astro";
---

<BaseLayout>
  <section class="home-grid">

    <!-- MAIN CONTENT AREA -->
    <div class="main-content">
      <div class="main-surface">
        <!-- Featured Post -->
        <HomeFeatured />

        <!-- Other Posts -->
        <div class="post-list">
          <HomePostCard />
          <HomePostCard />
          <HomePostCard />
          <HomePostCard />
        </div>
      </div>
    </div>

    <!-- SIDEBAR -->
    <aside class="sidebar">
      <Sidebar />
    </aside>

  </section>
</BaseLayout>
